<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Notes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Notes.Views"
    Shell.FlyoutBehavior="Flyout">


    <TabBar FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Recipes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{OnPlatform ’icon_notes.png’, iOS=’icon_notes_ios.png’,
            MacCatalyst=’icon_notes_ios.png’}" />
        <ShellContent
            Title="Camera"
            ContentTemplate="{DataTemplate views:CameraPage}"
            Icon="{OnPlatform ’icon_camera.png’, iOS=’icon_camera.png’,
            MacCatalyst=’icon_camera.png’}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform ’icon_about.png’, iOS=’icon_about_ios.png’,
            MacCatalyst=’icon_about_ios.png’}" />

        <ShellContent
            Title="Timer"
            ContentTemplate="{DataTemplate views:TimerPage}"
            Icon="{OnPlatform ’icon_timer.png’, iOS=’icon_timer.png’,
            MacCatalyst=’icon_timer.png’}" />

    </TabBar>
</Shell>

